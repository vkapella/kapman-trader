{
  "type": "object",
  "required": [
    "context_label",
    "confidence_score",
    "metric_assessment",
    "metric_weights",
    "discarded_metrics",
    "conditional_recommendation"
  ],
  "properties": {
    "context_label": {
      "type": "string"
    },
    "confidence_score": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "metric_assessment": {
      "type": "object",
      "required": ["supporting", "contradicting", "neutral"],
      "properties": {
        "supporting": { "type": "array", "items": { "type": "string" } },
        "contradicting": { "type": "array", "items": { "type": "string" } },
        "neutral": { "type": "array", "items": { "type": "string" } }
      }
    },
    "metric_weights": {
      "type": "object",
      "additionalProperties": { "type": "number" }
    },
    "discarded_metrics": {
      "type": "array",
      "items": { "type": "string" }
    },
    "conditional_recommendation": {
      "type": "object",
      "required": ["direction", "action", "option_type", "option_strategy"],
      "properties": {
        "direction": { "type": "string" },
        "action": { "type": "string" },
        "option_type": { "type": ["string", "null"] },
        "option_strategy": { "type": ["string", "null"] }
      }
    }
  }
}
