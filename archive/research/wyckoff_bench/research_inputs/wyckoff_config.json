{
  "version": "1.2.0",
  "normalization": {
    "method": "zscore",
    "parameters": {
      "window": 252,
      "min_periods": 30
    }
  },
  "phase_thresholds": {
    "A": {
      "rsi_range": {
        "min": 0,
        "max": 30
      },
      "adx_range": {
        "min": 25,
        "max": 100
      },
      "description": "Accumulation - Strong downtrend, high directional movement"
    },
    "B": {
      "rsi_range": {
        "min": 30,
        "max": 45
      },
      "adx_range": {
        "min": 15,
        "max": 25
      },
      "description": "Build-up - Weakening downtrend, decreasing trend strength"
    },
    "C": {
      "rsi_range": {
        "min": 45,
        "max": 55
      },
      "adx_range": {
        "min": 0,
        "max": 15
      },
      "description": "Consolidation - Neutral zone, low trend strength"
    },
    "D": {
      "rsi_range": {
        "min": 55,
        "max": 70
      },
      "adx_range": {
        "min": 15,
        "max": 25
      },
      "description": "Markup - Building uptrend, increasing trend strength"
    },
    "E": {
      "rsi_range": {
        "min": 70,
        "max": 100
      },
      "adx_range": {
        "min": 25,
        "max": 100
      },
      "description": "Distribution - Strong uptrend, high directional movement"
    }
  },
  "volatility_regimes": {
    "low": {
      "max": 15,
      "description": "Low volatility regime - HV below 15%"
    },
    "medium": {
      "min": 15,
      "max": 30,
      "description": "Medium volatility regime - HV between 15-30%"
    },
    "high": {
      "min": 30,
      "description": "High volatility regime - HV above 30%"
    }
  },
  "metric_dependencies": {
    "polygon": ["RSI", "MACD", "ADX", "EMA", "SMA", "HV"],
    "schwab": ["GEX", "Gamma_Flip", "IV_Skew", "IV_Term", "GEX_Slope"]
  },
  "checklist_thresholds": {
    "lookback_short": 10,
    "lookback_medium": 20,
    "lookback_long": 50,
    "volume_spike_factor": 2.0,
    "support_threshold": 0.01,
    "base_volatility_threshold": 0.02,
    "min_risk_reward": 3.0,
    "target_pct": 10.0,
    "stop_pct": 3.0
  },
  "indicator_thresholds": {
    "rsi_overbought": 70,
    "rsi_oversold": 30,
    "adx_strong_trend": 25,
    "macd_histogram_significance": 0.5
  }
}
